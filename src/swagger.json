        "summary": "Create user",
        "description": "Create an user account",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": "string",
                  "email": "string",
                  "password": "string",
                  "driver_license": "string"
                },
                "example": {
                  "name": "Username Example",
                  "email": "email@example.com",
                  "password": "passwordexample123",
                  "driver_license": "X"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "User Already Exists"
          }
        }
      }
